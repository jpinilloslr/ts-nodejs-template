{
  "name": "ts-nodejs-template",
  "version": "1.0.0",
  "description": "Node.js template project with TypeScript, Prettier and ESLint integration",
  "main": "dist/index.js",
  "scripts": {
    "format": "prettier . -w",
    "lint": "eslint . --ext .ts",
    "prebuild": "npm run lint",
    "build": "tsc",
    "watch": "tsc -w"
  },
  "keywords": [
    "template",
    "typescript",
    "prettier",
    "eslint"
  ],
  "author": "Joaquin Pinillos",
  "license": "ISC",
  "devDependencies": {
    "@types/node": "^20.11.19",
    "@typescript-eslint/eslint-plugin": "^7.0.2",
    "@typescript-eslint/parser": "^7.0.2",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "prettier": "^3.2.5",
    "prettier-plugin-organize-imports": "^3.2.4",
    "typescript": "^5.3.3"
  }
}
